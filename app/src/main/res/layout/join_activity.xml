<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Member Join Form"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/joinId"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="ID" />

        <Button
            android:id="@+id/checkBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:onClick="idCheck"/>

        </LinearLayout>
        <TextView
            android:id="@+id/validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validity Check Text" />
        <EditText
            android:id="@+id/joinName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Name" />
        <EditText
            android:id="@+id/joinGender"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Gender" />
        <EditText
            android:id="@+id/joinPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Password" />

        <EditText
            android:id="@+id/joinEmail"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="E-mail" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/joinBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:onClick="join"/>

        <Button
            android:id="@+id/resetBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:onClick="reset"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Result TextView"/>

    <TextView
        android:id="@+id/returnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="return to Login Page"
        android:textStyle="bold"
        android:textSize="18dp"/>
</LinearLayout>
